<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.dreamland">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".MainApplication"
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:replace="android:icon,android:theme,android:allowBackup"
            tools:targetApi="31">
        <activity
            android:name=".ui.floater.FloaterMessagesActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.floater.FloaterActivity"
            android:exported="true"/>
        <activity
            android:name=".ui.WritedreamActivity.WritedreamActivity"
            android:exported="false" />
        <activity
                android:name=".ui.dreams.DreamsActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.personal.PersonalActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.auth.LoginActivity"
                android:exported="true">
                        <intent-filter>
                            <action android:name="android.intent.action.MAIN" />

                            <category android:name="android.intent.category.LAUNCHER" />
                        </intent-filter>
        </activity>
        <activity
                android:name=".ui.dashboard.DashboardActivity"
                android:exported="true"
                android:label="首页">
        </activity>
        <activity
                android:name=".ui.chat.MessageListActivity"
                android:exported="true"
                android:label="解梦">
        </activity>
    </application>

</manifest>